package homework;

public class TreeMapTest<K,V> {

	Node root;
	
	
	TreeMapTest(Node rootNode){
		root = rootNode;
	}
	
	void printTree(){
		print(root);
	}
	
	void print(Node node){
		if(node == null){
			return;
		}else{
			print(node.left);
			String s = node.key.toString();
			s+=(node.isRed)? "red  " : "black  ";
			if(node.parent!=null){
				s+="parent: " + node.parent.key.toString();
			}
			System.out.println(s);
			print(node.right);
		}
	}
	
	

	
	class Node<K,V>{
		
		Node right;
		Node left;
		Node parent;
		
		K key;
		V value;
		
		boolean isRed;
		
		Node(K thisKey,V thisValue){
			key = thisKey;
			value = thisValue;
		}
		
		Node(K thisKey,V thisValue,Node par){
			key = thisKey;
			value = thisValue;
			parent = par;
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
